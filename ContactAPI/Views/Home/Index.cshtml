@model IEnumerable<ContactAPI.Models.ContactListTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactRemarks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContactPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactRemarks)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContactName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContactName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContactName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
